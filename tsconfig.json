{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "es6",
        "esModuleInterop": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "strictNullChecks": true,
        "sourceMap": true,
        "outDir": "./build",
        "baseUrl": ".",
        "declaration": true,
        "rootDir": "./src",
        "typeRoots": [
            "node_modules/@types"
        ],
        "paths": {}
    },
    "include": [
        "src/**/*",
    ],
    "exclude": [
        "./build",
        "./node_modules",
        "./**/*.spec.ts"
    ]
}